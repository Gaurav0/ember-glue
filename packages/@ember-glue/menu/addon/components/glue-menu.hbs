<div class="glue-menu" ...attributes>
  <BasicDropdown @onOpen={{this.onOpen}} as |dd|>
    {{yield (hash
      Trigger=(component "glue-menu-trigger" triggerComponent=dd.Trigger dropdown=this.dropdown)
      Content=(component "glue-menu-content" contentComponent=dd.Content dropdown=this.dropdown)
    )}}
  </BasicDropdown>
</div>
